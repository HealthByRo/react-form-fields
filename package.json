{
  "name": "react-form-fields",
  "version": "1.2.0",
  "description": "An example of how to start a new React Component in Arabella style",
  "repository": "git@bitbucket.org:arabellatech/react-form-fields.git",
  "author": "Arabella Team <team@arabel.la>",
  "license": "MIT",
  "main": "lib/index.js",
  "scripts": {
    "build": "babel --presets es2015,stage-0 -d lib/ src/ --ignore \"**/*.test.js\",\"**/*.stories.js\"",
    "test": "jest --coverage",
    "test:watch": "jest --watchAll",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "lint": "npm run lint:js",
    "lint:eslint": "eslint --ignore-path .gitignore src/**",
    "lint:js": "npm run lint:eslint -- src/ ",
    "lint:staged": "lint-staged"
  },
  "lint-staged": {
    "*.js": "lint:eslint"
  },
  "pre-commit": "lint:staged",
  "babel": {
    "presets": [
      "es2015",
      "stage-0",
      "react"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "app/**/*.{js,jsx}",
      "!app/**/*.test{s}.{js,jsx}"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "testRegex": "src/.*\\.test[s]?\\.js$"
  },
  "dependencies": {
    "immutable": "v4.0.0-rc.2",
    "lodash": "^4.17.4",
    "moment": "^2.18.1"
  },
  "peerDependencies": {
    "react": "15.x"
  },
  "devDependencies": {
    "@kadira/storybook": "^2.21.0",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.2",
    "babel-jest": "^20.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "enzyme": "^2.8.2",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "4",
    "eslint-plugin-react": "^7.0.0",
    "flow-bin": "^0.45.0",
    "jest": "^20.0.0",
    "lint-staged": "^3.4.0",
    "react": "^15.5.4",
    "react-addons-test-utils": "^15.5.1",
    "react-dom": "^15.5.4",
    "react-test-renderer": "^15.5.4"
  }
}
